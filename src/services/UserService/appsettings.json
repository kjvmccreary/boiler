{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Debug",
      "Microsoft.AspNetCore.Authorization": "Debug",
      "Common.Services.TenantProvider": "Debug",
      "UserService.Services": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=boiler_dev;Username=boiler_app;Password=dev_password123;Port=5432;Include Error Detail=true",
    "Redis": "localhost:6379"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-jwt-key-that-is-at-least-256-bits-long",
    "Issuer": "AuthService",
    "Audience": "StarterApp",
    "ExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 7,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "TenantSettings": {
    "DefaultTenantId": "1",
    "ResolutionStrategy": "Header",
    "EnableRowLevelSecurity": true,
    "AllowCrossTenantQueries": false,
    "TenantHeaderName": "X-Tenant-ID",
    "RequireTenantContext": false
  },
  "ServiceSettings": {
    "ServiceName": "UserService",
    "Version": "1.0.0",
    "Environment": "Development",
    "Port": 5002,
    "HealthCheckPath": "/health"
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "https://localhost:3000",
      "https://localhost:5173"
    ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
    "AllowedHeaders": [ "*" ],
    "AllowCredentials": true
  },
  "Monitoring": {
    "Enabled": true,
    "Email": "monitor@local",
    "Password": "ChangeMe123!",
    "TenantId": 1
  },
  "CacheSettings": {
    "UserPermissionExpirationMinutes": 5,
    "RolePermissionExpirationMinutes": 10,
    "DefaultExpirationMinutes": 15,
    "EnableCaching": true,
    "LogCacheOperations": true
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "ConnectTimeout": 5000,
    "SyncTimeout": 5000,
    "AbortOnConnectFail": false
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "Microsoft.AspNetCore.Authorization": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/userservice-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  }
}
